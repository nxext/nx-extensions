{
  "version": 2,
  "outputCapture": "direct-nodejs",
  "title": "Nx Plugin Playground Target",
  "description": "Creates a playground for a Nx Plugin.",
  "type": "object",
  "properties": {
    "verdaccioConfig": {
      "type": "string",
      "description": "Verdaccio config file."
    },
    "testTarget": {
      "type": "string",
      "description": "The test target to run"
    },
    "verdaccioPort": {
      "type": "number",
      "description": "The port Verdaccio should use",
      "default": 4872
    }
  },
  "additionalProperties": false,
  "required": ["testTarget", "verdaccioConfig"]
}
