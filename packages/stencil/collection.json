{
  "$schema": "../../node_modules/@angular-devkit/schematics/collection-schema.json",
  "name": "stencil",
  "version": "0.0.1",
  "schematics": {
    "init": {
      "factory": "./src/schematics/init/init",
      "schema": "./src/schematics/init/schema.json",
      "description": "Core features for collections",
      "hidden": true
    },
    "application": {
      "factory": "./src/schematics/application/schematic",
      "schema": "./src/schematics/application/schema.json",
      "description": "Generate Stencil application",
      "aliases": [
        "app"
      ],
      "hidden": false
    },
    "ionic-pwa": {
      "factory": "./src/schematics/ionic-pwa/schematic",
      "schema": "./src/schematics/ionic-pwa/schema.json",
      "description": "Generate Stencil ionic pwa",
      "aliases": [
        "pwa"
      ],
      "hidden": false
    },
    "library": {
      "factory": "./src/schematics/library/schematic",
      "schema": "./src/schematics/library/schema.json",
      "description": "Generate Stencil Library",
      "aliases": [
        "lib",
        "collection"
      ],
      "hidden": false
    },
    "ng-add": {
      "factory": "./src/schematics/ng-add/schematic",
      "description": "Add @nxext/stencil",
      "hidden": false
    },
    "storybook-init": {
      "factory": "./src/schematics/storybook/init/init",
      "schema": "./src/schematics/storybook/configuration/schema.json",
      "description": "Add storybook configuration to the workspace",
      "hidden": true
    },
    "storybook-configuration": {
      "factory": "./src/schematics/storybook/configuration/configuration",
      "schema": "./src/schematics/storybook/configuration/schema.json",
      "description": "Add storybook configuration to a ui library",
      "hidden": false
    },
    "component": {
      "factory": "./src/schematics/component/component",
      "schema": "./src/schematics/component/schema.json",
      "description": "Add a component to a ui library",
      "aliases": [
        "c"
      ],
      "hidden": false
    },
    "add-outputtarget": {
      "factory": "./src/schematics/add-outputtarget/add-outputtarget",
      "schema": "./src/schematics/add-outputtarget/add-outputtarget.schema.json",
      "description": "Add react/angular libraries for the component library",
      "hidden": false
    },
    "ionic-app": {
      "factory": "./src/schematics/ionic-app/schematic",
      "schema": "./src/schematics/ionic-app/schema.json",
      "description": "Generate Stencil Ionic Capacitor app",
      "hidden": false
    }
  }
}
