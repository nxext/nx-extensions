{
  "version": 2,
  "outputCapture": "direct-nodejs",
  "title": "Web Application vite package solution",
  "description": "Web vite package solution",
  "type": "object",
  "properties": {
    "entryFile": {
      "type": "string",
      "description": "The name of the main entry-point file."
    },
    "outputPath": {
      "type": "string",
      "description": "The output path of the generated files."
    },
    "assets": {
      "type": "array",
      "description": "List of static assets.",
      "default": [],
      "items": {
        "$ref": "#/definitions/assetPattern"
      }
    },
    "packageJson": {
      "type": "string",
      "description": "The name of the package.json file"
    },
    "frameworkConfigFile": {
      "type": "string",
      "description": "The path to vite.config.js for the framework.",
      "hidden": true
    },
    "configFile": {
      "type": "string",
      "description": "Path to the vite config"
    },
    "external": {
      "description": "external libs",
      "type": "array",
      "items": {
        "type": "string"
      },
      "default": []
    },
    "globals": {
      "description": "globals",
      "type": "object",
      "properties": {
        "key": {
          "type": "string",
          "description": "library key"
        },
        "value": {
          "type": "string",
          "description": "library value"
        }
      },
      "default": {}
    }
  },
  "required": [
    "entryFile",
    "outputPath"
  ],
  "definitions": {
    "assetPattern": {
      "oneOf": [
        {
          "type": "object",
          "properties": {
            "glob": {
              "type": "string",
              "description": "The pattern to match."
            },
            "input": {
              "type": "string",
              "description": "The input directory path in which to apply 'glob'. Defaults to the project root."
            },
            "output": {
              "type": "string",
              "description": "Relative path within the output folder."
            }
          },
          "additionalProperties": false,
          "required": [
            "glob",
            "input",
            "output"
          ]
        },
        {
          "type": "string"
        }
      ]
    }
  }
}
